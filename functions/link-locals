function _link_app() {
    if [ $# -ne 1 ]; then
        echo "Error: Missing app name"
        exit 1
    fi
    if [ ! -d ${XDG_PACKAGE_HOME}/$1 ]; then
        echo "Error: Application '$1' is not installed on the local space"
        exit 1
    fi
    for binary in ${XDG_PACKAGE_HOME}/$1/bin/*; do
        if [ -x $binary -a ! -d $binay ]; then
            ln -sf $binary ${USER_BIN}/
        fi
    done
    return 0
}

function _link_locals() {
    if [ $# -gt 0 ]; then
        for app in $@; do
            _link_app ${app}
        done
    else
        for app in ${XDG_PACKAGE_HOME}/*; do
            if [ -d $app/bin ]; then
                _link_app ${app##*/}
            fi
        done
    fi
    return 0
}

_link_locals $@